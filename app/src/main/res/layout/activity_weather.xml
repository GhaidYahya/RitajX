<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/RLHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgBG"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/purple_700" />

        <TextView
            android:id="@+id/textCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="City Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/textTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCityName"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="65sp" />

        <ImageView
            android:id="@+id/imgWeather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/textTemp"
            android:layout_centerHorizontal="true"
            android:layout_margin="1dp"
            android:src="@drawable/cloud" />

        <TextView
            android:id="@+id/textConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgWeather"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Conditions"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/llWind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textConditions"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textWind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:padding="5dp"
                android:text="Wind Speed: "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textWindSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:padding="5dp"
                android:text="0.0Km/h"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWind"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:padding="5dp"
                android:text="Last Update: "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textLastTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:padding="5dp"
                android:text="YYYY-MM-DD\nHH:MM:SS"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
