<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".services">

    <LinearLayout
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="770dp"
        android:background="@drawable/lay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="420dp"
            android:layout_height="757dp">


            <Button
                android:id="@+id/mytodo_btn"
                android:layout_width="163dp"
                android:layout_height="211dp"
                android:background="@drawable/round_bg"
                android:drawableTop="@drawable/rsz_to_do_list"
                android:elevation="20dp"
                android:onClick="Todo"
                android:padding="10dp"
                android:text="My ToDo"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.151"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.987" />

            <Button
                android:id="@+id/bank_btn"
                android:layout_width="162dp"
                android:layout_height="221dp"
                android:background="@drawable/round_bg"
                android:drawableTop="@drawable/rsz_bank"
                android:onClick="bank"
                android:padding="10dp"
                android:text="BANK"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.883"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.295" />

            <Button
                android:id="@+id/library_btn"
                android:layout_width="163dp"
                android:layout_height="211dp"
                android:background="@drawable/round_bg"
                android:drawableTop="@drawable/rsz_library"
                android:elevation="20dp"
                android:onClick="library"
                android:padding="10dp"
                android:text="LIBRARY"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.136"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.14" />

            <Button
                android:id="@+id/gym_btn"
                android:layout_width="166dp"
                android:layout_height="191dp"
                android:background="@drawable/round_bg"
                android:drawableTop="@drawable/rsz_gym"
                android:onClick="gym"
                android:padding="10dp"
                android:text="GYM"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.141"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.565" />

            <Button
                android:id="@+id/clinic_btn"
                android:layout_width="162dp"
                android:layout_height="221dp"
                style="@style/serveC"
                android:background="@drawable/backpink"
                android:backgroundTint="@null"
                android:drawableTop="@drawable/rsz_clinic"
                android:onClick="clinic"
                android:padding="10dp"
                android:text="CLINIC"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.883"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.764" />

            <TextView
                android:id="@+id/TitleServ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="18dp"
                android:text="Services"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/library_btn"
                app:layout_constraintEnd_toEndOf="@+id/library_btn"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/library_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/nav_btn"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:background="@drawable/rsz_more_1"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:onClick="nav"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/profile_Small_btn"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:background="@drawable/rsz_woman"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:onClick="nav"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />




</androidx.constraintlayout.widget.ConstraintLayout>