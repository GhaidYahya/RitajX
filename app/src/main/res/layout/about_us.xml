<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_aboutus"
    tools:context=".AboutUs"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timesnewroman"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="18dp"
            android:text="RitajX MasterMinds"
            android:textColor="@color/grad1"
            android:textSize="33sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"

            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rsz_developer"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/nameTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ghaid Yahya"
            android:textStyle="bold"
            android:gravity="center"
            style="@style/aboutus"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            app:layout_constraintStart_toStartOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="@+id/imageView1"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rsz_developer_1"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/nameTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Zaid Zitawi"
            style="@style/aboutus"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginTop="8dp"/>



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="4dp"
            android:padding="10dp"
            android:src="@drawable/rsz_developer"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/nameTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sara Yousef"
            android:textStyle="bold"
            style="@style/aboutus"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginTop="8dp"/>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="68dp"
            android:padding="10dp"
            android:src="@drawable/rsz_developer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/nameTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salam Nassar"
            android:textStyle="bold"
            style="@style/aboutus"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:padding="10dp"
            android:src="@drawable/rsz_developer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/nameTextView5"
            style="@style/aboutus"
            android:layout_width="166dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Dareen Ahmad"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/paragraphTextView"
            style="@style/aboutus"
            android:layout_width="328dp"
            android:layout_height="843dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Introducing RitajX, an all-in-one campus app that simplifies access to
essential services such as the library, gym, clinic, and bank. What sets RitajX
apart is its integration of key features from Ritaj, including student schedules
and grades. The 'X' in RitajX signifies the expansion of services beyond the
traditional, incorporating a personal to-do list feature and a dynamic events
slideshow with real-time weather updates. This name reflects the app's
evolution, encompassing the trusted foundation of Ritaj while introducing a
new and extended range of functionalities."
            app:layout_constraintEnd_toEndOf="@+id/nameTextView5"
            app:layout_constraintStart_toStartOf="@+id/nameTextView5"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
