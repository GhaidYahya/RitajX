<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="#ebecfe">

    <LinearLayout
        android:id="@+id/vLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e1ffe5">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Title"
            android:textColor="#9B9FE3"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:layout_width="200dp"
            android:id="@+id/taskStatus"
            android:textSize="20sp"
            android:text="status"
            android:textColor="#9B9FE3"
            android:textStyle="bold"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/Pic"
        android:layout_width="44dp"
        android:layout_height="31dp"
        android:layout_below="@+id/vLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/taskDate"
        android:layout_toEndOf="@+id/Pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vLayout"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#9B9FE3"
        android:text="May 23, 2015"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/taskd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/taskDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/info"/>

    <TextView
        android:id="@+id/taskDesc"
        android:layout_toEndOf="@+id/taskd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskDate"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#9B9FE3"
        android:text="desc"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>


</RelativeLayout>